{
  "name": "example-codegen",
  "version": "1.0.0",
  "private": true,
  "description": "Mercurius + GraphQL Code Generator example",
  "keywords": [
    "graphql-codegen"
  ],
  "license": "MIT",
  "author": "PabloSz",
  "main": "dist/index.js",
  "scripts": {
    "dev": "bob-tsm --node-env=dev --cjs --watch=src src/listen.ts",
    "start": "bob-tsm --node-env=prod --cjs src/listen.ts",
    "test": "cross-env NODE_ENV=test tap --node-arg=--require=bob-tsm"
  },
  "dependencies": {
    "fastify": "^5.1.0",
    "graphql": "^16.9.0",
    "mercurius": "^15.1.0",
    "mercurius-codegen": "workspace:*"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/node": "^22.8.7",
    "@types/tap": "^15.0.12",
    "bob-tsm": "^1.1.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "mercurius-integration-testing": "^9.0.0",
    "prettier": "^3.3.3",
    "tap": "^16.3.10",
    "typescript": "^5.6.3"
  }
}
