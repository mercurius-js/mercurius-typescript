{
  "name": "example-codegen-gql-files",
  "version": "1.0.0",
  "private": true,
  "description": "Mercurius + GraphQL Code Generator example",
  "keywords": [
    "graphql-codegen"
  ],
  "license": "MIT",
  "author": "PabloSz",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsup-node --watch --onSuccess \"cross-env NODE_ENV=development node dist/index.js\" src/index.ts",
    "prepare": "tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test tap --node-arg=--require=esbuild-register"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.1",
    "fastify": "^3.22.0",
    "graphql": "^15.6.1",
    "mercurius": "^8.6.0",
    "mercurius-codegen": "workspace:*"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.1.0",
    "@types/node": "^16.10.9",
    "@types/tap": "^15.0.5",
    "cross-env": "^7.0.3",
    "esbuild-register": "^3.0.0",
    "mercurius-integration-testing": "^3.2.0",
    "prettier": "^2.4.1",
    "tap": "^15.0.10",
    "tsup": "^5.4.0",
    "typescript": "^4.4.4"
  },
  "tap": {
    "check-coverage": false
  }
}
