{
  "name": "example-codegen-gql-files",
  "version": "1.0.0",
  "private": true,
  "description": "Mercurius + GraphQL Code Generator example",
  "keywords": [
    "graphql-codegen"
  ],
  "license": "MIT",
  "author": "PabloSz",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development bob-tsm --cjs --watch=src src/listen.ts",
    "start": "cross-env NODE_ENV=production bob-tsm --cjs src/listen.ts",
    "test": "cross-env NODE_ENV=test tap --node-arg=--require=bob-tsm"
  },
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.1",
    "fastify": "^3.22.1",
    "graphql": "^15.6.1",
    "mercurius": "^8.7.0",
    "mercurius-codegen": "workspace:*"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.1.0",
    "@types/node": "^16.11.1",
    "@types/tap": "^15.0.5",
    "bob-tsm": "^0.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.13.8",
    "mercurius-integration-testing": "^3.2.0",
    "prettier": "^2.4.1",
    "tap": "^15.0.10",
    "typescript": "^4.4.4"
  },
  "tap": {
    "check-coverage": false
  }
}
