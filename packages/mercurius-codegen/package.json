{
  "name": "mercurius-codegen",
  "version": "3.2.0",
  "keywords": [
    "fastify",
    "graphql",
    "gql",
    "mercurius",
    "typescript",
    "codegen"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mercurius-js/mercurius-typescript"
  },
  "license": "MIT",
  "author": "PabloSz <pablosaez1995@gmail.com>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --removeComments && tsc --emitDeclarationOnly",
    "dev": "tsc --watch --preserveWatchOutput",
    "prepare": "tsc --removeComments && tsc --emitDeclarationOnly",
    "postpublish": "gh-release",
    "test": "cross-env TS_NODE_PROJECT=test/tsconfig.json nyc --use-spawn-wrap ava test/index.test.ts",
    "watch": "concurrently -r \"nodemon\" \"wait-on coverage && serve coverage/lcov-report\" \"wait-on -s 1 tcp:5000 && open-cli http://localhost:5000\""
  },
  "dependencies": {
    "@graphql-codegen/core": "^2.2.0",
    "@graphql-codegen/plugin-helpers": "^2.2.0",
    "@graphql-codegen/typed-document-node": "^2.1.6",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-operations": "^2.1.8",
    "@graphql-codegen/typescript-resolvers": "^2.3.2",
    "@graphql-tools/load-files": "^6.5.1",
    "@graphql-tools/utils": "^8.3.0",
    "@graphql-typed-document-node/core": "^3.1.0",
    "chokidar": "^3.5.2",
    "mkdirp": "^1.0.4"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^16.11.1",
    "@types/prettier": "^2.4.1",
    "@types/proxyquire": "^1.3.28",
    "@types/rimraf": "^3.0.2",
    "ava": "^3.15.0",
    "changesets-github-release": "^0.0.4",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "fastify": "^3.22.0",
    "graphql": "^15.6.1",
    "mercurius": "^8.6.0",
    "mercurius-codegen": "workspace:*",
    "nodemon": "^2.0.14",
    "nyc": "15.1.0",
    "open-cli": "^7.0.1",
    "prettier": "^2.4.1",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "serve": "^12.0.1",
    "tmp-promise": "^3.0.2",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4",
    "wait-for-expect": "^3.0.2",
    "wait-on": "^6.0.0"
  },
  "peerDependencies": {
    "fastify": "^3.22.0",
    "graphql": "*",
    "mercurius": "^8.0.0 || ^7.0.0 || ^6.4.0",
    "prettier": "^2.4.1"
  }
}
